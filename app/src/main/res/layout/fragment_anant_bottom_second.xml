<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.anantlaxman.AnantBottomSecondFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/bottom_second"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_heading_part1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_2"
            android:textColor="@color/black"
            android:fontFamily="@font/laila_medium"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="@string/heading2_part1"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:fontFamily="@font/laila_bold"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/ll_heading_part2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="0.7"
        android:fontFamily="@font/laila_bold"
        android:text="@string/heading2_part2"
        android:textColor="@color/main_heading"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintTop_toBottomOf="@+id/ll_heading_part1"
        />

    <TextView
        android:id="@+id/homeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description2"
        android:layout_marginTop="@dimen/_7sdp"
        android:fontFamily="@font/laila_regular"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ll_heading_part2" />

    <Button
        android:id="@+id/readMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/laila_medium"
        android:text="@string/readMore"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>